NODE_ENV=development
PORT=5000

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mula-store?retryWrites=true&w=majority

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Development: http://localhost:5000/api/auth/google/callback
# Production: https://your-backend-domain.com/api/auth/google/callback
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLIC_KEY=pk_test_...

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Client URL (CRITICAL for CORS and OAuth redirects)
# Development: http://localhost:5173
# Production: https://your-frontend-domain.com
CLIENT_URL=http://localhost:5173

# Session
SESSION_SECRET=your-session-secret
COOKIE_SECRET=your-cookie-secret

# Admin
ADMIN_EMAIL=admin@example.com
